<% if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show position-relative col-6 offset-3"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close position-absolute top-0 end-0"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<% if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show position-relative col-6 offset-3"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close position-absolute top-0 end-0"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
